DESCRIBE person;

select * from cat limit 10;
DESCRIBE cat;

select * from person_cats limit 10;
DESCRIBE person_cats;

select *
from information_schema.table_constraints;

select *
from information_schema.key_column_usage;


SELECT * FROM INFORMATION_SCHEMA.STATISTICS;

SHOW INDEXES FROM person_cats;

explain select * from person_cats pc where person_id = 1;
explain select * from person_cats pc;
explain select * from person_cats pc join person p on pc.person_id = p.id where p.id=40;
explain select * from cat c where c.colour="blue";
